<h1>New question</h1>

<div class="user-form-question">
  <%= form_for(@question) do |f|%>
    <% if @question.errors.any? %>
      <div class="form-question-errors">
        <ul> 
          <% @question.errors.full_messages.each do |message|%>
            <li class="form-question-error-message"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-question-field">
      <%= f.label :title, class: 'form-question-label' %>
      <%= f.text_field :title, class: 'form-question-text-field' %>
    </div>

    <div class="form-question-field">
      <%= f.label :body, class: 'form-label' %>
      <%= f.text_field :body, class: 'form-text-field' %>
    </div>

    <div class="form-question-action">
      <%= f.sumbit 'Задать вопрос', class: 'btn form-question-action-btn '%>
    </div>
  <% end %>
</div>

<div>
  <%= button_to "Back to users", users_path, method: :get %>
</div>
