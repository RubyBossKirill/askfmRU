<%= form_with(model: question, url: user_questions_path(params[:id])) do |f| %>
  <% if question.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
        <% question.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-question">
    <div class="form-question-field">
      <%= f.label :title, 'Тема вопроса', class: 'form-question-label' %>
      <%= f.text_field :title, class: 'form-question-field' %>
    </div>
    <div class="form-question-field">
      <%= f.label :body, 'Описание вопроса', class: 'form-question-label' %>
      <%= f.text_field :body, class: 'form-question-field' %>
    </div>
    <div class="form-question-field">
      <%= f.label :background_color, 'Выберите цвет', class: 'form-question-label' %>
      <%= f.select :background_color, options_for_select(Question::COLORS.shuffle, selected: question.background_color)%>
    </div>
    <div class="form-question-btn">
      <%= f.submit 'Отправить вопрос', class: 'btn form-question-btn' %>
    </div>
  </div>
<% end %>

