<% content_for :title, "New user" %>

<h1>New user</h1>
<div class="user-form">
  <%= form_for(@user) do |f|%>
    <% if @user.errors.any? %>
      <div class="form-errors">
        <ul> 
          <% @user.errors.full_messages.each do |message|%>
            <li class="form-error-message"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-field">
      <%= f.label :username, class: 'form-label' %>
      <%= f.text_field :username, class: 'form-text-field' %>
    </div>

    <div class="form-field">
      <%= f.label :name, class: 'form-label' %>
      <%= f.text_field :name, class: 'form-text-field' %>
    </div>

    <div class="form-field">
      <%= f.label :email, 'Логин (email)',class: 'form-label' %>
      <%= f.text_field :email, class: 'form-text-field' %>
    </div>

    <div class="form-field">
      <%= f.label :password, 'Пароль', class: 'form-label' %>
      <%= f.password_field :password, class: 'form-password-field' %>
    </div>

    <div class="form-field">
      <%= f.label :password_confirmation, 'Повторить пароль', class: 'form-label' %>
      <%= f.password_field :password_confirmation, class: 'form-password-field' %>
    </div>

    <div class="form-action">
      <%= f.submit 'Зарегистрироваться', class: 'btn form-action-btn '%>
    </div>
  <% end %>
</div>

<div>
  <%= button_to "Back to users", users_path, method: :get %>
</div>
